<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ripple_foreground"
    app:cardBackgroundColor="#FF313131"
    app:cardCornerRadius="5dip"
    app:cardElevation="5dip"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dip">

    <TextView
        android:id="@+id/competence_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="6pt"
        android:text="item-competence"
        android:textColor="@color/TextWhite"
        android:textSize="@dimen/TextMiddle"/>

</android.support.v7.widget.CardView>